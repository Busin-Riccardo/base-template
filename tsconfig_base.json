{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "jsx": "react",
    "importHelpers": true,
    "noEmit": true
  },
  "include": ["packages/**/*"]
}
